---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = "kecil.dev — Building tools that get out of the way",
	description = "Developer portfolio by kecil. AI-powered apps where AI isn't the feature—it's the invisible touch that makes everything feel smarter."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#0a0a0b" />
		
		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:site_name" content="kecil.dev" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:site" content="@2045humanoid" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href="https://kecil.dev" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
